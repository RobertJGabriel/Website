extends /__layout/layout
append vars
    - var bodyClasses = ''
    - var metaTitle = 'Repos & Projects | Robert James Gabriel'
    - var metaDescription = 'Latest`s Github repositories, node modules, scripts and projects by Robert James Gabriel from different sources.'
    - var metaKeywords = 'HTML,CSS,XML,JavaScript,Robert James Gabriel,award winning, php , experienced,Galen, angular, HTML, HTML5, JavaScript, Node, PHP and SQL developer,golang,web design'
    - var pageUrl = 'https://www.robertgabriel.ninja/projects'
    - var masterBinding = Math.floor(Math.random() * (15 - 1300) + 1300)
    - var develop = false
    - var currentPath = 'https://www.robertgabriel.ninja/projects'


block headScript

  script(src='https://unpkg.com/vue@2.5.16/dist/vue.min.js')
  script(src='https://cdn.jsdelivr.net/vue.resource/1.0.3/vue-resource.min.js')

  script(src='./assets/js/vue/repos.js',defer)


block pageBody
  .container-fluid.base-header#repos
    .row
      .col-sm-3.col-md-3.col-lg-3
      .col-sm-6.col-md-6.col-lg-6.wrapper
        .row
          img.me.img-responsive(src='./assets/img/me/me-4.webp', alt='Robert James Gabriel', width='150', height='150')
          h1.text-center
            b Latest Repos & Projects
          h2.text-center
            | On #[a(href='https://github.com/robertjgabriel')  Github]

      .col-sm-3.col-md-3.col-lg-3



      .col-sm-12.col-md-12.col-lg-12.wrapper
        .c(v-bind:class="{ hide: loading == false}")
          include /__layout/loading

        .row(v-for="i in Math.ceil(repos.length / 5)" v-bind:class="{ hide: loading == true}" v-cloak )
          .col-sm-4(v-for="repo in repos.slice((i - 1) * 3, i * 3)")
            .boxes
              h2.common-IntroText {{repo.name}}
              p.common-BodyText
                | {{repo.description}}
              p
                span.label.label-success.margin-right.labels-yellow(for="")
                  | {{repo.language}}
                span.info
                  include /app/assets/svgs/solid/star.svg
                  | {{repo.stargazers_count}}
              p.margin-top
                a.btn.btn-flat.btn-warning.btn-padding-left(v-bind:href="repo.html_url", target="blank")  View on Github
